/* pages/drugmember/memberinfo/memberinfo.wxss */
.head {
    display: flex;
    flex-direction: column;
    background: #efefef;
    width: 100%;
    padding: 100rpx 0rpx;
    align-items: center;
    justify-content: space-between;
}

.head image {
    width: 150rpx;
    height: 150rpx;
    margin: 0 auto;
    border-radius: 50%;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: left;
    color: #FFF;
    height: 400rpx;
    position: relative;
    overflow: hidden;   
     width:100%;

  }


 .userinfo image{
    /* border: 1px solid #FFF; */
    display: block;
    filter: alpha(opacity=70); /*IE滤镜，透明度50%*/
    -moz-opacity: 0.7; /*Firefox私有，透明度50%*/
    opacity: 0.7; /*其他，透明度50%*/
 }

  
  .userinfo-avatar {
    overflow: hidden;
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
  }

  .info-cell{
      display: flex;
      border-bottom: 1rpx solid #E8E8E8;
      height:100rpx;
      vertical-align: middle;
      padding: 0 30rpx;
  
    }
.info-label{
    height: 100rpx;
    line-height: 100rpx;
    color:#797A7E;
}
.info-input{
    height: 100rpx;
    line-height: 100rpx;
    color:#797A7E;
}

.info-btn{
    width: 80%;
    margin: 20rpx;
    background-color: #5CC583;
    color: white;
    border-radius: 98rpx;
    display: block;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

