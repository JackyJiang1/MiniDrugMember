page{
    background: #F0F0F0;
}
.page-header{
    height:200rpx;
    position: relative;
    width: 100%;
}
.page-title{
    font-size: 25px;
    font-weight: bold;
    color:#4D4D4D;
    position: absolute;
    top:120rpx;
    left: 50%;
    transform:translate3d(-50%,-50%,0);
}

.goodslist{
    width: 95%;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
}

.goodsbox {
    width: 45%;
    border-radius: 20rpx;
    background-color: #FFF;
    margin: 30rpx 2.5%;
    /* flex: 1;
    flex-direction: row; 
    flex-wrap: wrap; */
  }
  
  .item {
    display: block;
    cursor: pointer;
    width: 100%;
    /* width: 45%; */
  }

  .item .poster {
    width: 100%; 
    height: 250rpx;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;

  }

  /* .itemtitle{
    flex-wrap: wrap;
  } */
  
  .goodsbox .title{
    color: #171717; 
    height: 50rpx; 
    line-height: 50rpx; 
    font-size: 30rpx;
    font-weight: bold;
    margin-left: 20rpx;
  }

.goodsbox .score{
    color:#187738;
    font-size: 30rpx;
}


