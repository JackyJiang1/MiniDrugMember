/* pages/drugmember/mine/mine.wxss */
.top {
  width: 100%;
  height: 550rpx;
  background: #23EBB9;
  padding-top: 15px;
  position: relative;
}

.center {
  width: 95%;
  height: 450rpx;
  background: white;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  border-radius: 5px;
}

.center_top {
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 280rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  border-bottom: 1px solid #EEEEEE;
}

.center_img {
  width: 156rpx;
  height: 156rpx;
  border-radius: 50%;
  overflow: hidden;
}

.center_img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.center_img .user_head {
  width: 100%;
  height: 100%;
}

.center_info {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  margin-left: 30px;
}

.center_name {
  font-size: 20px;
}

.center_phone {
  color: #BEBEBE;
}

.center_down {
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 35px;
  margin: 0 auto;
  margin-top: 20rpx;
}

.center_rank {
  width: 50%;
  height: 35px;
  display: flex;
  flex-direction: row;
}

.rank_text {
  height: 35px;
  line-height: 35px;
  margin-left: 10rpx;
  color: #AAAAAA;
}

.center_rank image {
  width: 35px;
  height: 35px;
}

.center_score {
  width: 50%;
  height: 35px;
  display: flex;
  flex-direction: row;
}

.center_score image {
  width: 35px;
  height: 35px;
}

.gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}


#banner{
    background-image: linear-gradient( #5CC583,#90DCBA);/* 默认方向自上向下 */
    height: 400rpx;
}
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: left;
    color: #FFF;
    padding-left: 20rpx;
  }
  
  .userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
  }
  
  .usermotto {
    margin-top: 200px;
  }

  .item {
    display: flex;
    padding: 20rpx 40rpx;
    cursor: pointer;
  }
  .item .poster {
    width: 128rpx;
    height: 128rpx;
    margin-right: 20rpx;
  }
  .meta {
    flex: 1;
    padding-top: 30rpx;
  }
  .meta .title,.item .meta .sub-title {
    display: block;
  }
  .meta .title {
    font-size: 36rpx;
  }
  .meta .user-nickname{
    font-size: 40rpx;
    font-weight: bold;
  }
  .meta .user-title {
    background-image: linear-gradient(to right,#FFB754, #E7D68B);/* 自右向左 */
    border-radius: 30rpx;
    font-size: 26rpx;
    padding: 0rpx 20rpx 5rpx;
    margin-left: 20rpx;
    color:#FFF;
  }
  .meta .sub-title {
    font-size: 32rpx;
    color: #ADADAD;
    margin-top: 10rpx;
    display: block;
  }

  .statistics{
    height: 226rpx;
    box-sizing: border-box;
    /* padding: 5px 10px; */
    position: relative;
    color:#ADADAD;
  }
  .statistics .ul-num{
    display: flex;
    /* height: 26rpx; */
    position: absolute;
    bottom: 10rpx;
    left: 5%;
    z-index: 100;
    width: 90%;
  }
  .statistics .ul-num li{
    flex: 1;
    display: flex;
    font-size: 45rpx;
    font-weight: bold;
    justify-content: center;
    align-items: center;
  }  
  .statistics .ul-text{
    display: flex;
    height: 26rpx;
    position: absolute;
    bottom: 100rpx;
    left: 5%;
    z-index: 100;
    width: 90%;
  }
  .statistics .ul-text li{
    flex: 1;
    display: flex;
    font-size: 34rpx;
    justify-content: center;
    align-items: center;
  }  

  .usermenu{
    width: 90%;
    margin: 0 auto;

  }
  .usermenu ul{

  }
  .usermenu ul li{
    width: 100%;
    display: block;
    border-bottom: 1px solid #DBDBDB;
    height:120rpx;
    line-height: 120rpx;

  }
  .usermenu ul li image{
    vertical-align: middle;
  }
  .usermenu ul li text{
    float:right;
    color:#B2B2B2;
  }